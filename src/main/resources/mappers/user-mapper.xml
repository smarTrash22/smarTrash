<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapper">
	
	<resultMap id="resultList" type="User"> <!-- 컬럼명, 멤버명 같으면 작성 안해도되지만 혹시몰라서 작성함 -->
		<result property="user_no" column="user_no" />
		<result property="user_email" column="user_email" />
		<result property="user_name" column="user_name" />
		<result property="user_admin" column="user_admin" />
		<result property="user_date" column="user_date" />
	</resultMap>
	
	<resultMap id="selectLatest5Result" type="Trash">
		<id property="trash_no" column="trash_no"/>
		<result property="trash_path" column="trash_path"/>
	</resultMap>
	
	<resultMap id="selectMygal5Result" type="Board">
		<id property="board_no" column="board_no"/>
		<result property="board_content" column="board_content"/>
	</resultMap>
	
	<select id="dupCheck" parameterType="String" resultType="User">
		select *
		from t_user
		where user_email = #{ user_email }
	</select>
	
	<insert id="insertUser" parameterType="User">
		insert into t_user values(T_UN_S.nextval, #{ user_email }, #{ user_name }, default, default)
	</insert>
	
	<select id="selectUser" parameterType="String" resultType="User">
		select * from t_user
		where user_email = #{ user_email }
	</select>
	
	<select id="updateNick" parameterType="User">
		update t_user
		set user_name = #{ user_name }
		where user_no = #{ user_no }
	</select>
	
	<delete id="deleteUser" parameterType="_int">
		delete from t_user
		where user_no = #{ user_no }
	</delete>
	
	<select id="selectLatest5" resultMap="selectLatest5Result" parameterType="_int">
		select *
		from t_trash
		where user_no = #{ user_no }
	</select>
	
	<select id="selectMygal5" resultMap="selectMygal5Result" parameterType="_int">
		SELECT *
		FROM t_board
		where trash_no in (SELECT trash_no
                           FROM t_trash
                           WHERE  user_no = ${ user_no })
	</select>
</mapper>
